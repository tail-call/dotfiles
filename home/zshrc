## FUNCTIONS

function g() {
  case "$1" in
    1) cd ~/Developer/code.novotelecom/personal-account-ios ;;
    2) cd ~/Developer/code.mine ;;
    3) cd ~/Study/leetcode.com/problems/minimum-size-subarray-sum/ ;;
    *) declare -f g ;;
  esac
}

function cd! () {
    if [[ ! -e "$1" ]]; then
        mkdir -p "$1" && cd "$1"
    else
        cd "$1"
    fi
}

unalias run-help 2> /dev/null
run-help() {
    man $1 > /dev/null 2>&1
    if [[ $? == 0 ]]; then
        man $1 | awk '/^SYNOPSIS$/,0'
    else
        echo ""
    fi
}

